<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeg.te.justenoughgoods">

    <!-- Bluetoothの機能を使用するためのパーミッションの宣言 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- Bluetoothスキャンするための位置情報パーミッションの宣言 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".amount.AmountViewActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LogViewActivity"
            android:parentActivityName=".amount.AmountViewActivity"></activity>
        <activity android:name=".SlaveConfigurationActivity"
            android:parentActivityName=".amount.AmountViewActivity"></activity>
        <activity android:name=".raspberry.RaspberryConfigurationActivity"
            android:parentActivityName=".amount.AmountViewActivity"></activity>
        <activity android:name=".bluetooth.BluetoothDeviceListActivity"
            android:parentActivityName=".amount.AmountViewActivity"></activity>
    </application>

</manifest>