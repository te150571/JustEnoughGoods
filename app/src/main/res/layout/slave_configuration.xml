<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SlaveConfigurationActivity">

    <Toolbar
        android:id="@+id/toolbar_slaveConfig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slaveConfigTitleCID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/slave_config_id"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/slave_config_name" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editText_slaveNameEdit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="@string/slave_config_name_hint"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:gravity="center"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigDefault"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/slave_config_preset" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spinner_slaveConfigPreset"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:entries="@array/presets"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/slave_config_notification_amount_now" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView_slavesConfigAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/slave_config_notification_amount_now_num" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigAmountNotificationToggle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/slave_config_amount_notification_toggle"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/switch_amountNotificationToggle"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingRight="50dp"
                    android:gravity="start"
                    android:switchMinWidth="100dp"
                    android:showText="true"
                    android:textOff="@string/disabled"
                    android:textOn="@string/enable" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigNotificationAmount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/slave_config_notification_amount" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/editText_slaveNotificationAmountEdit"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="@string/slave_config_notification_amount_hint"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:gravity="center"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigFaultNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/slave_config_fault_now" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView_slavesConfigFaultNowStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/slave_config_fault_now_status_ok" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_slavesConfigFaultNotificationToggle"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/slave_config_fault_notification_toggle"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/switch_FaultNotificationToggle"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingRight="50dp"
                    android:gravity="start"
                    android:switchMinWidth="100dp"
                    android:showText="true"
                    android:textOff="@string/disabled"
                    android:textOn="@string/enable" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_slaveConfigConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>