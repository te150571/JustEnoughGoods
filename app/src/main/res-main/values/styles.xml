<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/defaultNormal</item>
    </style>

    <style name="BaseActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ToolBarTheme</item>
        <item name="android:titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorTitle</item>
        <item name="android:background">@color/colorToolbarBackground</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
